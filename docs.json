{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Journey API Documentation",
  "colors": {
    "primary": "#0EA5E9",
    "light": "#38BDF8",
    "dark": "#0284C7"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "What is Journey?",
            "pages": [
              "introduction"
            ]
          },
          {
            "group": "Subscriptions",
            "pages": [
              "subscriptions/subscriptions",
              "subscriptions/delivery-fulfillment"
            ]
          },
          {
            "group": "Payments",
            "pages": [
              "payments/recurring-payments",
              "payments/dunning",
              "payments/claims"
            ]
          },
          {
            "group": "Customer Engagement",
            "pages": [
              "customer-engagement/my-pages",
              "customer-engagement/communication"
            ]
          },
          {
            "group": "Analytics",
            "pages": [
              "analytics/reports"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "API Status",
          "href": "https://status.journey.io",
          "icon": "signal"
        },
        {
          "anchor": "Support",
          "href": "mailto:hello@getjourney.io",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://dashboard.journey.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://dashboard.journey.io/settings/api-keys"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/getjourney"
    }
  },
  "api": {
    "baseUrl": "https://api.journey.io",
    "playground": {
      "mode": "simple"
    }
  }
}
